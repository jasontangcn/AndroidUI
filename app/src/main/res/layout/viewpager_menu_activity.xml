<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewpager_menu_light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menuChat"
            style="@style/viewPagerMenuItemLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/menuChatImage"
                    style="@style/viewPagerMenuIV"
                    android:src="@drawable/ic_viewpager_menu_chat_selector" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menuChatText"
                    style="@style/viewPagerMenuTV"
                    android:text="@string/viewpager_menu_wechat" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuAddressbook"
            style="@style/viewPagerMenuItemLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/menuAddressbookImage"
                    style="@style/viewPagerMenuIV"
                    android:src="@drawable/ic_viewpager_menu_addressbook_selector" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menuAddressbookText"
                    style="@style/viewPagerMenuTV"
                    android:text="@string/viewpager_menu_addressbook" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDiscovery"
            style="@style/viewPagerMenuItemLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/menuDiscoveryImage"
                    style="@style/viewPagerMenuIV"
                    android:src="@drawable/ic_viewpager_menu_discovery_selector" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menuDiscoveryText"
                    style="@style/viewPagerMenuTV"
                    android:text="@string/viewpager_menu_discovery" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuMe"
            style="@style/viewPagerMenuItemLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/meMenuImage"
                    style="@style/viewPagerMenuIV"
                    android:src="@drawable/ic_viewpager_menu_me_selector" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meMenuText"
                    style="@style/viewPagerMenuTV"
                    android:text="@string/viewpager_menu_me" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>